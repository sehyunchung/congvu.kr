{
  "private": true,
  "name": "congvu.kr",
  "description": "Official website of CONG VU",
  "license": "",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o ./app/styles/app.css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o ./app/styles/app.css",
    "postinstall": "patch-package --patch-dir node_modules/remix-three/patches"
  },
  "dependencies": {
    "@react-three/drei": "^9.11.3",
    "@react-three/fiber": "^8.0.19",
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "@remix-run/serve": "^1.5.1",
    "patch-package": "^6.4.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-three": "^0.0.1",
    "three": "^0.142.0",
    "valtio": "^1.6.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.1",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
